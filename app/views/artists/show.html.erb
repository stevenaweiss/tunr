<h1><%= @artist.name %></h1>
<p><img src="<%= @artist.photo_url%>" width="500"/></p>
<ul>
  <%@songs.each do |song| %>
  <li><%= song.title %>, <%= song.year %></li>
  <a href="/artists/<%= @artist.id %>/songs/<%= song.id %>/edit">Edit This Song</a>


   <form action="/artists/<%= @artist.id %>/songs/<%= song.id %>" method="POST">
  <input type="hidden" name="_method" value="DELETE" />
  <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>" />

  <button>Delete This Song!</button>
</form>


  <% end %>
  </ul>

  <a href="/artists/<%= @artist.id %>/songs/new">Add A New Song</a>

  <a href="/artists">Back To Artists</a>




